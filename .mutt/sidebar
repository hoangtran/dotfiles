###
# options specific to mutt's sidebar patch
###

# settings
  set sidebar_delim       = 'â”‚'
  set sidebar_visible     = yes
  set sidebar_width       = 25

# colors
color sidebar_new brightyellow default

# bindings
#bind index,pager p sidebar-prev
#bind index,pager n sidebar-next
#bind index,pager o sidebar-open
bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Co sidebar-open

# b toggles sidebar visibility
macro index \Ct '<enter-command>toggle sidebar_visible<enter>'
macro pager \Ct '<enter-command>toggle sidebar_visible<enter>'


